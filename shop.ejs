	  window.onload = function() {
		document.getElementById('loader').style.opacity = 0;
		setTimeout(function(){
			document.getElementById('loader').style.display = 'none';
		},510);
	  };

	  document.getElementById('nametitle').innerHTML = guildName+' - '+shopName;

	  function create_item_view(name,data) {
	  var divparent = document.createElement('div');
		divparent.className = 'col-12';
		
		var divparent2 = document.createElement('div');
		divparent2.className = 'card h-100';

		  
		  var img = document.createElement('div');
		  img.style.cssText = "min-height:100px;height: 100%;width:100%;background:url("+(data.image.trim()==""?'https://homestaymatch.com/images/no-image-available.png':data.image)+") center no-repeat;background-size:contain;";

		var row = document.createElement('div');
			row.className = 'row';

			var oo1 = document.createElement('div');
			oo1.className = 'col-12 col-md-4';
			
			var oo2 = document.createElement('div');
			oo2.style.position = 'relative';
			oo2.className = 'col-12 col-md-8';

		  var divcardbody = document.createElement('div');
		  divcardbody.className = 'card-body';
		  
		  var divcardtitle = document.createElement('h3');
		  divcardtitle.className = 'card-title';
		  divcardtitle.innerHTML = name;
		  
		  var divcardprice = document.createElement('h4');
		  divcardprice.innerHTML = data.price+' Money';
		  
		  var divcardtext = document.createElement('p');
		  divcardtext.className = 'card-text';
		  divcardtext.innerHTML = data.description;
		  
		  var button = document.createElement('button');
		  button.className = 'btn';
		  button.style.cssText = 'position:absolute;top:10px;right:10px;';
		  button.innerHTML = 'Buy!';
		  button.onclick = function() {
		    if (document.getElementById('buy-card-bank-input').value.trim()=="") {
				document.getElementById('buy-card').style.opacity=0;
				document.getElementById('buy-card-result').style.opacity=0;
				document.getElementById('buy-card-result').style.display='flex';
				document.getElementById('buy-card-result').style.opacity=1;
				document.getElementById('buy-card-result-message').innerHTML = "Please indicate the name of the bank";
				document.getElementById('buy-card-result-title').innerHTML = 'Error during transaction';
				return;
			}
		    document.getElementById('buy-card').style.opacity = 0;
			document.getElementById('buy-card').style.display = 'flex';
			document.getElementById('buy-card').style.opacity = 1;
			document.getElementById('buy-card-button').onclick = function() {
				var xhr = new XMLHttpRequest();
				xhr.onreadystatechange = function() {
					
					if (xhr.readyState == XMLHttpRequest.DONE) {console.log(xhr.responseText);
						try {
							var data = JSON.parse(xhr.responseText);
							document.getElementById('buy-card').style.opacity=0;
							document.getElementById('buy-card-result').style.opacity=0;
							document.getElementById('buy-card-result').style.display='flex';
							document.getElementById('buy-card-result').style.opacity=1;
							document.getElementById('buy-card-result-message').innerHTML = data.message;
							if (data.error) {
								document.getElementById('buy-card-result-title').innerHTML = 'Error during transaction';
							} else {
								document.getElementById('buy-card').style.display = 'none';
								document.getElementById('buy-card-result-title').innerHTML = 'Successful Purchase';
							}
						} catch (e) {
							alert('Undefined Error: '+e.toString());
						}
					}
				}
				xhr.open('GET', 'https://accountsupervisorwebinterface.herokuapp.com/api/guild/'+guildId+'/shop/'+encodeURIComponent(shopName)+'/item/'+encodeURIComponent(name)+'/bank/'+encodeURIComponent(document.getElementById('buy-card-bank-input').value), true);
				xhr.send(null);
			}
		  }
		  
		  oo1.appendChild(img);
		  
		  oo2.appendChild(divcardtitle);
		  oo2.appendChild(divcardprice);
		  oo2.appendChild(divcardtext);
		  oo2.appendChild(button);
		  
		  row.appendChild(oo1);
		  row.appendChild(oo2);
		  
		  divcardbody.appendChild(row);
		  
		  divparent2.appendChild(divcardbody);
		  
	      divparent.appendChild(divparent2);
		  
		  return divparent;
	  }

	  function create_item(name,data) {
		  var divparent = document.createElement('div');

		  var divcard = document.createElement('div');
		  divcard.className = 'card h-100';
		  
		  var img = document.createElement('img');
		  img.className = 'card-img-top';
		  img.src = data.image.trim()==""?'https://homestaymatch.com/images/no-image-available.png':data.image;
		  
		  var divcardbody = document.createElement('div');
		  divcardbody.className = 'card-body';
		  
		  var divcardtitle = document.createElement('h4');
		  divcardtitle.className = 'card-title';
		  divcardtitle.innerHTML = name;
		  
		  var divcardprice = document.createElement('h5');
		  divcardprice.innerHTML = data.price+' Money';
		  
		  var divcardtext = document.createElement('p');
		  divcardtext.className = 'card-text';
		  divcardtext.innerHTML = data.description;
		  
		  divcardbody.appendChild(divcardtitle);
		  divcardbody.appendChild(divcardprice);
		  divcardbody.appendChild(divcardtext);
		  
		  divcard.appendChild(img);
		  divcard.appendChild(divcardbody);
		  
		  divparent.appendChild(divcard);
		
		  return divparent;
	  }
	  
	  console.log(user);
	  console.log(shopName);
	  console.log(shopItems);
	  
	  window.onpopstate = function(event) {
		  document.getElementById('item-view').style.display = 'none';
		  document.getElementById('content').style.display = 'flex';
	  }
	  
	  for (var i in shopItems) {
        if (shopItems.hasOwnProperty(i)) {
		  (function(i,shopItems){
		  var ut = document.createElement('div');
		  ut.className = 'col-lg-4 col-md-6 mb-4';
		  ut.style.cssText = 'position:relative;padding:0;';
		  var u = create_item(i,shopItems[i]);
		  var uu = create_item(i,shopItems[i]);
		  ut.appendChild(u);
		  ut.appendChild(uu);
		  uu.className += ' item';
		  u.style.cssText = "opacity:0;margin:10px 20px;";
		  uu.style.cssText = "margin:10px 20px;position:absolute;left:-20px;top:-10px;width:calc(100% - 20px);height:calc(100% - 10px);z-index:999;transition:transform 0.5s ease;";
          uu.onclick = function() {
		    history.pushState({}, "", "");
			var d = create_item_view(i,shopItems[i]);
			document.getElementById('item-view').innerHTML = '';
			document.getElementById('item-view').appendChild(d);
			document.getElementById('item-view').style.display = 'flex';
			document.getElementById('content').style.display = 'none';
		  };
		  document.getElementById('content').appendChild(ut);
		  })(i,shopItems);
        }
      }
	  
    </script>
