	  function create_item_view(name,data) {
	  var divparent = document.createElement('div');
		divparent.className = 'col-12';
		
		var divparent2 = document.createElement('div');
		divparent2.className = 'card h-100';

		  
		  var img = document.createElement('div');
		  img.style.cssText = "min-height:100px;height: 100%;width:100%;background:url("+(data.image.trim()==""?'https://homestaymatch.com/images/no-image-available.png':data.image)+") center no-repeat;background-size:contain;";

		var row = document.createElement('div');
			row.className = 'row';

			var oo1 = document.createElement('div');
			oo1.className = 'col-12 col-md-4';
			
			var oo2 = document.createElement('div');
			oo2.style.position = 'relative';
			oo2.className = 'col-12 col-md-8';

		  var divcardbody = document.createElement('div');
		  divcardbody.className = 'card-body';
		  
		  var divcardtitle = document.createElement('h3');
		  divcardtitle.className = 'card-title';
		  divcardtitle.innerHTML = name;
		  
		  var divcardprice = document.createElement('h4');
		  divcardprice.innerHTML = data.price+' Money';
		  
		  var divcardtext = document.createElement('p');
		  divcardtext.className = 'card-text';
		  divcardtext.innerHTML = data.description;
		  
		  var button = document.createElement('button');
		  button.className = 'btn';
		  button.style.cssText = 'position:absolute;top:10px;right:10px;';
		  button.innerHTML = 'Buy!';
		  button.onclick = function() {
		    document.getElementById('buy-card').style.opacity = 0;
			document.getElementById('buy-card').style.display = 'flex';
			document.getElementById('buy-card').style.opacity = 1;
			document.getElementById('buy-card-button').onclick = function() {
